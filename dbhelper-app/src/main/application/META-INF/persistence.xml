<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="dbhelperPU" transaction-type="JTA">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <jta-data-source>/jdbc/discountDS</jta-data-source>


        <class>ru.rbt.dbhelper.ejb.Order</class>

        <class>ru.rbt.dbhelper.ejb.OrderDao</class>
        <class>ru.rbt.dbhelper.ejb.AbstractDbhelperEntity</class>
        <class>ru.rbt.dbhelper.ejb.PuProvider</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="eclipselink.target-database" value="Oracle"/>
            <property name="eclipselink.target-server" value="WebLogic"/>
            <property name="eclipselink.logging.logger" value="ServerLogger"/>
            <property name="eclipselink.logging.session" value="true"/>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.jdbc.property.connection.transactionIsolation" value="2"/>

            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@dev.rbtechnologies.ru:1521:ELAR"/>
            <property name="javax.persistence.jdbc.user" value="IRBIS"/>
            <property name="javax.persistence.jdbc.password" value="irbis"/>
        </properties>
    </persistence-unit>
</persistence>

